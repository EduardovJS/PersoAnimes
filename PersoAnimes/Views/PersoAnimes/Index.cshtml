@model IEnumerable<PersoModel>

<div class="py-5">
    <div class="container">

        <div class="text-left mb-5">
            <a class="btn btn-sucess" asp-action="Cadastrar" asp-controller="PersoAnimes">Cadastrar personagem</a> <!-- tag "a" para criar links, chama o metodo cadastrar na controller PersoAnimes -->
        </div>

        <div class="row row-cols-1 rows-cols-sm-2 row-cols-md-3 g-0">
            @if (Model != null) // para tratrar com o @model, usamos o Model com letra maiuscula 
            {
                @if (Model.Count() > 0)
                {
                    @foreach (var animes in Model)
                    {
                        <div class="card mx-3 my-3 p-2" style="width: 12rem">
                            @if(animes.Capa != null)
                            {
                                <img src="/img/Satoru.jpg" class="card-img-top" style="width: 175x; height: 150px"/>
                            }
                            else
                            {
                                <img src="..." class="card-img-top" />
                            }

                            <div class="card-body">
                                <h5 class="card-title">@animes.NomeAnime</h5>
                            </div>

                            <div class="card-body">
                                <a class="btn btn-warning w-100" asp-action="Editar" asp-controller="PersoAnimes" asp-route-id="@animes.Id">Editar</a>
                                <a class="btn btn-danger w-100" asp-action="Remover" asp-controller="PersoAnimes" asp-route-id="@animes.Id">Remover</a>
                            </div>

                        </div>
                    }
                }
            }
        </div>
    </div>
</div>